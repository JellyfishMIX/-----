.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 头部搜索框 */
.header {
    width: 100%;
    height: 100rpx;
    background-color: #ffffff;
    position: fixed;
    border-top: 2rpx solid #f5f5f5;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 6rpx 0 #e3e3e3;
    z-index: 3;
}
.header__box {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 100rpx;
    background-color: #f5f5f5;
    width: 700rpx;
    height: 68rpx;
    color: #999999;
}
.header__box__img {
    width: 28rpx;
    height: 28rpx;
    margin-right: 20rpx;
    margin-top: 4rpx;
}

/* 大标题"精选" */
.sub-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: center;
    margin-top: 100rpx;
}
.sub-container__img {
    width: 108rpx;
    height: 34rpx;
    margin-top: 40rpx;
}

/* 精选书目 */
.books-container {
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    padding: 0 90rpx 0 90rpx;
    justify-content: space-around;
}
.books-container__cmp-book {
    margin-bottom: 10rpx;
}