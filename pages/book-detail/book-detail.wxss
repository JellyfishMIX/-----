.container {
    width: 100%;
    background-color: #f5f5f5;
}

/* 封面 */
.cover {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #ffffff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}
.cover__img {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 4rpx 4rpx 6rpx #e3e3e3;
}
.cover__title {
    font-size: 38rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-top: 20rpx;
}
.cover__author {
    font-size: 28rpx;
    color: #999999;
}

/* 通用容器 */
.sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #ffffff;
    width: 690rpx;
    padding: 30rpx;
}
.sub-container__headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}

/* 短评 */
.comments-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
}
.comments-container__cmp-tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}
.comments-container__tips {
    color: #999999;
}
