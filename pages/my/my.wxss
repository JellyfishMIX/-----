.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 背景图 */
.backgroundImg {
    width: 750rpx;
    height: 574rpx;
}

/* 导航条 */
.about {
    padding: 0 100rpx;
    width: 550rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    top: 440rpx;
}
.about__about-us {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
}
.about__about-us__img {
    width: 34rpx;
    height: 34rpx;
}
.about__about-us__book-num {
    font-size: 36rpx;
    color: #000000;
}
.about__about-us__description {
    font-size: 24rpx;
    color: #999999;
}

/* 用户头像 */
.avatar {
    position:absolute; 
    top:255rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.avatar__head {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

/* 点击学习 */
.see-more {
    width: 88rpx;
    height: 88rpx;
    position: absolute;
    top: 40rpx;
    right: 45rpx;
}

/* 下半部分容器，盛放preview组件 */
.subcontainer {
    background-color: #f5f5f5;
    padding: 30rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}
.title {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    padding-top: 30rpx;
}
.title__img {
    width: 98rpx;
    height: 42rpx;
}