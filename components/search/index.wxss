/* 历史搜索 */
.history {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    margin-top: 160rpx;
    font-size: 28rpx;
}
.history__title {
    width: 100%;
    line-height: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.history__title__chunk {
    width: 10rpx;
    height: 30rpx;
    background-color: #000000;
    display: inline-block;
    margin-right: 10rpx;
}
.history-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    padding: 20rpx;
}
.history__tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}

/* 热门搜索 */
.hot-search {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 690rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
}
.hot-search__title {
    width: 100%;
    line-height: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.hot-search__title__chunk {
    width: 10rpx;
    height: 30rpx;
    background-color: #000000;
    display: inline-block;
    margin-right: 10rpx;
}
.hot-search__container {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    padding: 20rpx;
}
.hot-search__tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}

/* css加载特效cmp-loader（页面居中） */
.loader-center {
    position: absolute;
    top: 40%;
}

/* 搜索结果列表 */
.books-container {
    margin-top: 120rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 0 90rpx 0 90rpx;
}
.books-container__cmp-book {
    margin-bottom: 10rpx;
}
/* css加载特效cmp-loader（下滑加载） */
.loader-bottom {
    margin: 0;  /* 无用css，预留占位 */
}

/* 无搜索结果提示框 */
.empty-tip {
    position: absolute;
    top: 45%;
    font-size: 38rpx;
}