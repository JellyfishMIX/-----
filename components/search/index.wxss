.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

/* 头部 */
.header {
    width: 750rpx;
    height: 100rpx;
    top: 0;
    border-top: 2rpx solid #f5f5f5;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    background-color: #ffffff;
    z-index: 3;
}
.search-container {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50rpx;
    margin-left: 20rpx;
}
.search-container__search-icon {
    width: 28rpx;
    height: 28rpx;
    margin-left: 24rpx;
    margin-right: 16rpx;
}
.search-container__bar {
    width: 460rpx;
    height: 68rpx;
    border-top-right-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
    display: inline-block;
    font-size: 28rpx;
}
.search-container__in-bar {
   color:  #999999;
}
.search-container__cancel-icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 20rpx;
    padding: 10rpx;
}
.search-container__cancel {
    width: 120rpx;
    line-height: 68rpx;
    text-align: center;
    display: inline-block;
    margin-left: 30rpx;
}

