.container {
    width: 320rpx;
    height: 500rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 30rpx;
}
.header {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin: 10rpx;
}
.header__tag {
    margin-left: 10rpx;
}
.header__like {
    margin-right: 4rpx;
}
.other-img {
    width: 100%;
    height: 240rpx;
    margin-bottom: 20rpx;
}
.music-img {
    width: 240rpx;
    height: 240rpx;
    border-radius: 50%;
    margin-bottom: 20rpx;
}
.content {
    max-width: 270rpx;
    font-size: 28rpx;
    color: #666666;
}