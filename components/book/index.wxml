<!--components/book/index.wxml-->
<view class="container" bind:tap="onTap">
    <image class="img" src="{{book.image}}"></image>
    <view class="description">
        <text class="title">{{book.title}}</text>
        <text class="author">{{book.author}}</text>
        <view class="foot">
            <view class="footer" wx:if="{{isLikeShowed}}">{{book.fav_nums}} 喜欢</view>
        </view>
    </view>
</view>
